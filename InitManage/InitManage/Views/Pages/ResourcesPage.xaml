<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ResourceViewModels="clr-namespace:InitManage.ViewModels.Resource"
    xmlns:DataTemplates="clr-namespace:InitManage.Views.DataTemplates"
    xmlns:sharpnado="clr-namespace:Sharpnado.TaskLoaderView;assembly=Sharpnado.Maui.TaskLoaderView"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    x:Class="InitManage.Views.Pages.ResourcesPage"
    x:DataType="ResourceViewModels:ResourcesViewModel"
    BackgroundColor="{AppThemeBinding Light={StaticResource Light}, Dark={StaticResource Dark}}"
    NavigationPage.HasNavigationBar="False"
    IconImageSource="book"
    Title="Menu">

    <sharpnado:TemplatedTaskLoader TaskLoaderNotifier="{Binding Loader}">
        <sharpnado:TemplatedTaskLoader.ResultControlTemplate>
            <ControlTemplate>
                <Grid
                    RowDefinitions="Auto, *"
                    BindingContext="{Binding Source={RelativeSource AncestorType={x:Type ResourceViewModels:ResourcesViewModel}}}">
                  
                    <Ellipse
                        Fill="{StaticResource Orange200}"
                        Margin="160"
                        Grid.Row="1"
                        WidthRequest="50"
                        HeightRequest="50"
                        VerticalOptions="End"
                        HorizontalOptions="End"/>

                    <Ellipse
                        Fill="{StaticResource Orange100}"
                        Margin="70"
                        Grid.Row="1"
                        WidthRequest="100"
                        HeightRequest="100"
                        VerticalOptions="End"
                        HorizontalOptions="End"/>

                    <Ellipse
                        Margin="-90"
                        Grid.Row="1"
                        WidthRequest="200"
                        HeightRequest="200"
                        VerticalOptions="End"
                        HorizontalOptions="End"/>
                  
                    <Grid Margin="10" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" RowSpacing="5">

                        <Label
                            Style="{StaticResource TitleLabel}"
                            Text="Toutes les réservations"/>

                        <StackLayout
                            Grid.Row="1">
                            <Entry
                                Placeholder="Entrez votre recherche"
                                Text="{Binding SearchBarText}"/>
                        </StackLayout>

                        <StackLayout
                            Grid.Row="2">
                            <Entry
                                Placeholder="Entrez l'adresse : "
                                Text="{Binding Address}"/>
                        </StackLayout>

                        <StackLayout
                            Grid.Row="3"
                            Orientation="Horizontal">
                            <Label
                                Text="Nombre de place : "/>
                            <Picker
                                HorizontalOptions="FillAndExpand"
                                Title="Places"
                                SelectedItem="{Binding SelectedCapacity}"
                                ItemsSource="{Binding ResourcesCapacities}"/>
                        </StackLayout>

                        <StackLayout
                            Grid.Row="4"
                            Orientation="Horizontal">
                            <Label
                                Text="Type de réservation : "/>
                            <Picker
                                HorizontalOptions="FillAndExpand"
                                Title="Types"
                                SelectedItem="{Binding SelectedType}"
                                ItemsSource="{Binding Types}"
                                ItemDisplayBinding="{Binding Name}"/>
                        </StackLayout>

                        <Grid ColumnDefinitions="*, Auto, *" Grid.Row="5">
                            <DatePicker
                                Date="{Binding StartDate}"
                                MaximumDate="{Binding EndDate}"/>
                            <Label
                                Text="=>"
                                Grid.Column="1"
                                VerticalOptions="Center"/>
                            <DatePicker
                                Grid.Column="2"
                                Date="{Binding EndDate}"
                                MinimumDate="{Binding StartDate}"/>
                        </Grid>

                        <StackLayout
                            Grid.Row="6"
                            Orientation="Horizontal">
                            <Label Text="Options : "/>
                            <Entry
                                Text="{Binding Options, Converter={StaticResource ListToStringValueConverter}, Mode=OneWay}"
                                InputTransparent="True"
                                HorizontalOptions="FillAndExpand"
                                IsReadOnly="True"/>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OptionEntryTappedCommand}"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <CollectionView
                            HeightRequest="150"
                            ItemsSource="{Binding Options}"
                            Grid.Row="7"
                            IsVisible="{Binding IsOptionsVisible}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="2" VerticalItemSpacing="5" HorizontalItemSpacing="5"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <DataTemplates:OptionDataTemplate/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>

                 

                    <CollectionView
                        Grid.Row="1"
                        Margin="10, 0"
                        ItemsSource="{Binding Resources}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <DataTemplates:ResourceDataTemplate/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </ControlTemplate>
        </sharpnado:TemplatedTaskLoader.ResultControlTemplate>
        <sharpnado:TemplatedTaskLoader.LoadingControlTemplate>
            <ControlTemplate>
                <VerticalStackLayout VerticalOptions="Center">
                    <skia:SKLottieView
                        Source="loader.json"
                        RepeatCount="-1"
                        WidthRequest="400"
                        HeightRequest="200"
                        HorizontalOptions="Center"/>
                    <Label
                        FontAttributes="Bold"
                        TextColor="{StaticResource Primary}"
                        HorizontalOptions="Center"
                        Text="{Binding Source={RelativeSource AncestorType={x:Type ResourceViewModels:ResourcesViewModel}}, Path=LoadingMessage}"/>
                </VerticalStackLayout>
                
            </ControlTemplate>
        </sharpnado:TemplatedTaskLoader.LoadingControlTemplate>
    </sharpnado:TemplatedTaskLoader>
</ContentPage>