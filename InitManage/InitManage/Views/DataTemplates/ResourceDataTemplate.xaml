<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InitManage.Views.DataTemplates.ResourceDataTemplate">

    <StackLayout Margin="5, 5">
        <Frame HasShadow="False" BackgroundColor="{StaticResource Dark}" CornerRadius="10" Padding="5">
            <Grid
                ColumnSpacing="10"
                RowDefinitions="Auto, Auto, Auto"
                ColumnDefinitions="3*, 7*">

                <Image Source="dotnet_bot" Grid.RowSpan="3" HeightRequest="100" BackgroundColor="Black"/>
                <Label
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Location salle de réunion"
                    TextColor="{StaticResource Primary}"/>
                <Label
                    TextColor="{StaticResource White}"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="0,0,20,0"
                    Text="Cette salle de réunion est une salle de réunion très lumineuse et spacieuse"/>

                <StackLayout Grid.Row="2" Grid.Column="1">
                    <Label TextColor="{StaticResource White}" Text="8 personnes"/>

                </StackLayout>
            </Grid>

        </Frame>

    </StackLayout>
    
   
</ContentView>

